@inject IStringLocalizer<Resources> Localizer

<MudItem xs="12">
    <MudDataGrid Items="ViewModel.BookingItems"
                 Filterable=true
                 SortMode="SortMode.Multiple"
                 Groupable=false>
        <Columns>
            <PropertyColumn Property="p => p.Name" />
            <PropertyColumn Property="p => p.LicensePlate" />
            <PropertyColumn Property="p => p.TotalPrice" />
            <TemplateColumn Class="Bookings">
                <CellTemplate>
                    <MudButton Size="Size.Small"
                               Variant="Variant.Filled"
                               Color="Color.Primary"
                               OnClick="@(e => ViewModel.BookCommand.Execute(context.Item))">
                        @Localizer[nameof(Resources.Book_BookButton)]
                    </MudButton>
                </CellTemplate>
            </TemplateColumn>
        </Columns>
    </MudDataGrid>
</MudItem>

@code
{
    [CascadingParameter]
    public BookingSearchViewModel ViewModel { get; set; } = null!;
}