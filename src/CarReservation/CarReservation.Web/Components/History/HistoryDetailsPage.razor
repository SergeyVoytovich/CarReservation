@inherits ViewBase<HistoryDetailsViewModel>

@attribute [Route(UriCollection.History.DetailsRoute)]

@inject IStringLocalizer<Resources> Localizer

<Title Value="@Localizer[nameof(Resources.HistoryDetail_Title)]" />

<Alert IsVisible=@ViewModel.IsError
       Severity="Severity.Error">
    @Localizer[nameof(Resources.HistoryDetails_NotFound)]
</Alert>

<MudGrid>
    <CascadingValue Value="ViewModel">
        <Loader IsLoading=@(!ViewModel.IsInitialized || ViewModel.IsBusy)>
            <HistoryDetailsForm />
        </Loader>
    </CascadingValue>
</MudGrid>

@code
{
    [Parameter]
    public Guid Id { get; set; }
}
