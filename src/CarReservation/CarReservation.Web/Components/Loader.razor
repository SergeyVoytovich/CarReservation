@if (IsVisible)
{
    @if (IsLoading)
    {
        <MudItem xs="12"
                 Class="d-flex justify-center">
            <MudProgressCircular Indeterminate="true"
                                 Color="Color.Primary"
                                 Size="Size.Medium" />
        </MudItem>
    }
    else
    {
        @ChildContent
    }
}

@code
{
    [Parameter]
    public bool IsLoading { get; set; } = false;

    [Parameter]
    public bool IsVisible { get; set; } = true;

    [Parameter]
    public RenderFragment ChildContent { get; set; } = default!;
}
